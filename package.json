{
  "name": "@atomic/root",
  "version": "1.0.0",
  "private": true,
  "description": "Atomic - AgentOps Governance Platform for Software Delivery",
  "workspaces": [
    "packages/*",
    "services/*",
    "cli",
    "adapters/*",
    "actions/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "dev": "concurrently \"npm run dev --workspace=services/gateway\" \"npm run dev --workspace=services/orchestrator\" \"npm run dev --workspace=services/dte\" \"npm run dev --workspace=services/finops\" \"npm run dev --workspace=services/evidence\"",
    "typecheck": "tsc --build tsconfig.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Abhitodan/Atomic"
  },
  "license": "Apache-2.0",
  "author": "Atomic Team"
}
