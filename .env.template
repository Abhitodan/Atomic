# Atomic Configuration Template
# Copy this file to .env and fill in your values

# API Keys (never commit actual keys)
GITHUB_TOKEN=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Service Configuration
GATEWAY_PORT=3001
ORCHESTRATOR_PORT=3002
DTE_PORT=3003
FINOPS_PORT=3004
EVIDENCE_PORT=3005

# Database
DATABASE_URL=postgresql://localhost:5432/atomic
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_TELEMETRY=false
ENABLE_MUTATION_TESTING=true
ZERO_RETENTION_MODE=false

# Security
SECRET_REDACTION_ENABLED=true
PII_REDACTION_ENABLED=true
MAX_REQUEST_SIZE=10485760

# Provider Configuration
DEFAULT_PROVIDER=copilot
COPILOT_ENABLED=true
CURSOR_ENABLED=true
WINDSURF_ENABLED=true

# Budget & Cost Controls
DEFAULT_BUDGET_USD=100
BUDGET_BREACH_WEBHOOK_URL=

# Testing
MUTATION_THRESHOLD_DEFAULT=0.6
TEST_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
